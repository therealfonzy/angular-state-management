{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Npgsql": "Warning"
    }
  },
  "Authentication": {
    "Schemes": {
      "Bearer": {
        "ClientId": "bff",
        "ClientSecret": "oidc-pkce-confidential_secret",
        "GetClaimsFromUserInfoEndpoint": true,
        "RequireHttpsMetadata": false,
        "SaveTokens": true,
        "Scope": [
          "openid",
          "profile",
          "email"
        ]
      },
      "OpenIdConnect": {
        "ClientId": "bff",
        "ClientSecret": "oidc-pkce-confidential_secret",
        "GetClaimsFromUserInfoEndpoint": true,
        "RequireHttpsMetadata": false,
        "SaveTokens": true
      }
    }
  },
  "ReverseProxy": {
    "Clusters": {
      "frontend": {
        "Destinations": {
          "frontend": {
            "Address": "http://angular-frontend"
          }
        }
      }
    },
    "Routes": {

      "frontend": {
        "ClusterId": "frontend",
        "Match": {
          "Path": "{**catch-all}"
        }
      }
    }
  }
}
