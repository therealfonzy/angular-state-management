{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "cli": {
    "packageManager": "npm",
    "analytics": "0d1fca56-56aa-4b27-97c0-15d9d10ade02"
  },
  "newProjectRoot": "projects",

  "projects": {
    "home": {
      "projectType": "application",
      "schematics": {
        "@schematics/angular:component": {
          "inlineTemplate": true,
          "inlineStyle": true
        }
      },
      "root": "projects/apps/home",
      "sourceRoot": "projects/apps/home/src",
      "prefix": "app",
      "architect": {
        "build": {
          "builder": "@angular/build:application",
          "options": {
            "browser": "projects/apps/home/src/main.ts",
            "tsConfig": "projects/apps/home/tsconfig.app.json",
            "assets": [
              {
                "glob": "**/*",
                "input": "projects/apps/home/public"
              }
            ],
            "styles": [
              { "input": "projects/apps/styles.css", "bundleName": "root-styles" },
              { "input": "projects/apps/styles.animation.css", "bundleName": "animation-styles" },
              { "input": "projects/apps/home/styles.css", "bundleName": "home-styles" }
            ]
          },
          "configurations": {
            "production": {
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "900kB",
                  "maximumError": "1MB"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "4kB",
                  "maximumError": "8kB"
                }
              ],
              "outputHashing": "all",
              "tsConfig": "projects/apps/home/tsconfig.app.prod.json",
              "statsJson": true
            },
            "development": {
              "optimization": false,
              "extractLicenses": false,
              "sourceMap": true,
              "tsConfig": "projects/apps/home/tsconfig.app.dev.json"
            }
          },
          "defaultConfiguration": "production"
        },
        "serve": {
          "builder": "@angular/build:dev-server",
          "configurations": {
            "production": {
              "buildTarget": "home:build:production"
            },
            "development": {
              "buildTarget": "home:build:development"
            }
          },
          "defaultConfiguration": "development"
        },
        "test": {
          "builder": "@angular/build:unit-test"
        }
      }
    }
  }
}
